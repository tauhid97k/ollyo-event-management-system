{% extends 'layouts/app.twig' %}

{% block content %}
  <h2 class="mb-4">Overview</h2>

  <!-- Stats -->
  <div class="row g-4 state">
    <!-- Card 1 -->
    <div class="col col-md-6 col-xl-4 col-xxl-3">
      <div class="card border-success bg-body-tertiary h-100">
        <div class="card-body d-flex gap-4 justify-content-between align-items-center">
          <div>
            <i class="fa-solid fa-calendar-days mb-2" style="font-size: 2.5rem;"></i>
            <h4>Total Events</h4>
          </div>
          <span class="display-1">25</span>
        </div>
      </div>
    </div>

    <!-- Card 2 -->
    <div class="col col-md-6 col-xl-4 col-xxl-3">
      <div class="card border-primary bg-body-tertiary h-100">
        <div class="card-body d-flex gap-4 justify-content-between align-items-center">
          <div>
            <i class="fa-solid fa-building mb-2" style="font-size: 2.5rem;"></i>
            <h4>Total Organizers</h4>
          </div>
          <span class="display-1">25</span>
        </div>
      </div>
    </div>

    <!-- Card 3 -->
    <div class="col col-md-6 col-xl-4 col-xxl-3">
      <div class="card border-warning bg-body-tertiary h-100">
        <div class="card-body d-flex gap-4 justify-content-between align-items-center">
          <div>
            <i class="fa-solid fa-user mb-2" style="font-size: 2.5rem;"></i>
            <h4>Total Users</h4>
          </div>
          <span class="display-1">25</span>
        </div>
      </div>
    </div>

    <!-- Card 1 -->
    <div class="col col-md-6 col-xl-4 col-xxl-3">
      <div class="card border-info bg-body-tertiary h-100">
        <div class="card-body d-flex gap-4 justify-content-between align-items-center">
          <div>
            <i class="fa-solid fa-user-plus mb-2" style="font-size: 2.5rem;"></i>
            <h4>New Users</h4>
          </div>
          <span class="display-1">25</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Show success toast (if any) -->
  {% if flash.message %}
    <div class="toast-container bottom-0 end-0 p-3">
      <div class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
          <strong class="me-auto">Success</strong>
          <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">{{ flash.message }}</div>
      </div>
    </div>
  {% endif %}

  <!-- Hide the toast after a delay -->
  <script>
    setTimeout(function () {
      var toast = document.querySelector('.toast')
      var bsToast = new bootstrap.Toast(toast)
      bsToast.hide()
    }, 3000)
  </script>
{% endblock %}
